                            {
                                <img id="passport" style="width:250px;height:250px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Passport))">
                            }
                            else
                            {
                                <img id="passport" style="width:250px;height:250px; object-fit:cover" src="">
