<table class="table table-striped">
    <thead>
        <tr>
            <th>Rank</th>
            <th>Service No</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Ship</th>
            <th>Command</th>
            @* <th>Appointment</th>*@

            <th>Action</th>
 
        </tr>
    </thead>
    <tbody>

        @foreach (var r in Model)
        {
<tr>
    <td>@r.Rank</td>
    <td>@r.serviceNumber</td>
    <td>@r.Surname</td>
