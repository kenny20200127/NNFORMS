    <td>@r.ship</td>
    <td>@r.command</td>

    <td>
        @if (r.classes == 1)
        {
        <a asp-controller="Ship" asp-action="UpdateOfficer" asp-route-id="@r.Id" class="btn btn-success">Authenticate</a>
