@using NNPEFWEB.Models
@using Microsoft.AspNetCore.Authorization
@model List<NNPEFWEB.Models.UserRolesViewModel>
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Rank</th>
            <th>Service No</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Command</th>
            <th>Appointment</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var r in Model)
        {
        <tr>
            <td>@r.UserName</td>
            <td>@r.Rank</td>
            <td>@r.FirstName</td>
            <td>@r.LastName</td>
            <td>@r.Email</td>
            <td>@r.Command</td>
            <td>@r.Appointment</td>

            @if ((await AuthorizationService.AuthorizeAsync(User, "SuperAdmin")).Succeeded)
            {
                <td>@string.Join(",", r.Roles.ToList())</td>

                <td><a class="btn btn-primary" asp-controller="UserRole" asp-action="Manage" asp-route-userId="@r.UserId">Manage Roles</a></td>
            }
        </tr>
        }
    </tbody>
</table>

