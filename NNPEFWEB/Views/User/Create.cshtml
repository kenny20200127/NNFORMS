@using NNPEFWEB.ViewModels.Users
@model UserViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">

    <span style="font-weight:bold; ">User Details</span>
    <hr />
    <div class="row">
        <div class="form-group col-sm-6">
            <label for="email" class="control-label">
                Email
            </label>
            <input type="email" id="email" name="email" required class="form-control">
        </div>
        <div class="form-group col-sm-6">
            <label for="email" class="control-label">
                Username
            </label>
            <input type="text" id="username" name="username" required class="form-control">
        </div>
    </div>

    <input type="hidden" id="id" name="id" value="0" />
    <div class="row">
        <div class="form-group col-sm-4">
            <label for="email" class="control-label">
                Phone Number
            </label>
            <input type="text" id="phonenumber" name="phonenumber" required class="form-control">
        </div>
        <div class="form-group col-sm-4">
            <label for="firstname" class="control-label">
                First Name
            </label>
            <input type="text" id="firstname" name="firstname" required class="form-control">
        </div>
        <div class="form-group col-sm-4">
            <label for="lastname" class="control-label">
                Last Name
            </label>
            <input type="text" id="lastname" name="lastname" required class="form-control">
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <label asp-for="Rank"></label>
            <select asp-for="Rank" class="form-control" required
                    asp-items="@(new SelectList(Model.RankList,"Value", "Text"))"></select>
            <span asp-validation-for="Rank" class="text-danger"></span>
        </div>
        <div class="form-group col-sm-4">
            <label for="password" class="control-label">
                Password
            </label>
            <input type="password" id="password" name="password" required class="form-control">
        </div>
        <div class="form-group col-sm-4">
            <label for="confirm-password" class="control-label">
                Confirm Pasword
            </label>
            <input type="password" id="confirmpassword" name="confirmpassword" required class="form-control">
        </div>
       
    </div>
    <div class="row">
        <div class="col-md-4">
            <label>Login Type</label>
            <select name="Appointment" class="form-control" required>
                <option>Select...</option>
                <option value="Adm">Admin Officer</option>
                <option value="1">OFP</option>
                <option value="2">WOP</option>
                <option value="3">JRPA</option>
                <option value="4">JRPB</option>
                <option value="5">JRPC</option>
                <option value="6">TRNP</option>
            </select>
        </div>
        <label for="roles" class="">
            Roles
        </label>
        <div class="form-group col-sm-4">
            <select style="width:100%; position:relative;left:10px;" id="roles" name="Rolesid" class="required form-control row">
                <option value="">Select Roles</option>
                @foreach (var role in Model.Roles)
                {
    <option value="@role.Id">@role.Name</option>}
            </select>
        </div>

    </div>

