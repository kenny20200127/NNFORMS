    {*@
<form asp-action="PersonnelHist" asp-controller="HistReports" method="get">
    <div class="row">
        <div class="col-md-4">
            <input type="text" name="svcno" id="svcno" placeholder="Service Number" class="form-control" />
        </div>
        <div class="col-md-4">
            <input type="text" name="year" id="year" placeholder="Year" class="form-control" />
        </div>

        <div class="col-md-4">
            <input type="submit" class="btn btn-primary" value="Search" />
        </div>
    </div>
</form>
<p></p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Rank</th>
            <th>Service No</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Ship</th>
            <th>Year</th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var r in Model)
        {
        <tr>
            <td>@r.Rank</td>
            <td>@r.serviceNumber</td>
            <td>@r.Surname</td>
            <td>@r.OtherName</td>
            <td>@r.ship</td>
            <td>@r.FormYear</td>


            <td>
                @if (r.classes == 1)
                {
                    <a asp-controller="HistReports" asp-action="downloadFormOfficer" asp-route-svcno="@r.serviceNumber"  asp-route-year="@r.FormYear" class="btn btn-dark" target="_blank">Print Page 1</a>
                    <a asp-controller="HistReports" asp-action="downloadFormOfficer2" asp-route-svcno="@r.serviceNumber" asp-route-year="@r.FormYear" class="btn btn-dark" target="_blank">Print Page 2</a>
                }
                @if (r.classes == 2)
                {
                    <a asp-controller="HistReports" asp-action="downloadForm" asp-route-svcno="@r.serviceNumber" class="btn btn-dark" target="_blank">Print Page 1</a>
                    <a asp-controller="HistReports" asp-action="downloadForm2" asp-route-svcno="@r.serviceNumber" class="btn btn-dark" target="_blank">Print Page 2</a>
                }
                @if (r.classes == 3)
                {
                    <a asp-controller="HistReports" asp-action="downloadFormTraining" asp-route-svcno="@r.serviceNumber" class="btn btn-dark" target="_blank">Print Page 1</a>
                    <a asp-controller="HistReports" asp-action="downloadFormTraining2" asp-route-svcno="@r.serviceNumber" class="btn btn-dark" target="_blank">Print Page 2</a>

                }
            </td>


        </tr>
            if (Model.Count() == 0)
            {
                <tr>No Record Found</tr>
            }
        }
    </tbody>
</table>
