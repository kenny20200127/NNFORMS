@model NNPEFWEB.ViewModel.ComfirmEmail
@{
    ViewData["Title"] = "VerifyCode";
    Layout = "~/Views/Shared/_CustomLayout.cshtml"; 
}



<div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">

    <div class="card card0 border-0">
        <div class="row d-flex">
            <div class="col-lg-3">
                <img style="margin-left:100px" src="~/Image/navylogo2.png" class="logo">
            </div>
            <div class="col-lg-6">
                <div class="card2 card border-0 px-4 py-5">
                    <div class="row mb-4 px-3">
                        <h3>Send Verify Code</h3>


                    </div>
                    @if (@TempData["errorMessage"] != null)
                    {
        <div id="alert_div" class="alert alert-danger alert-dismissible fade show" role="alert">
            <h2 style="color:#ff0000">  @TempData["errorMessage"]</h2>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>}
                    <div class="row px-3 mb-4">
                        <div class="line"></div>
                        <div class="line"></div>
                    </div>
                    <form id="account" method="post">
                        <div class="row px-3">
                            <label class="mb-1">
                                <h6 class="mb-0 text-sm">UserName</h6>
                            </label>
                            <input asp-for="UserName" class="mb-4 form-styling" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="row px-3">
                            <label class="mb-1">
                                <h6 class="mb-0 text-sm">Email</h6>
                            </label>
                            <input asp-for="Email" class="mb-4 form-styling" id="email1" onkeyup="check();" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="row px-3">
                            <label class="mb-1">
                                <h6 class="mb-0 text-sm">Confirm Email</h6>
                            </label>
                            <input asp-for="ConfirmEmail" class="mb-4 form-styling" id="email2" onkeyup="check();" />
                            <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
                        </div>
                        <div class="custom-control custom-checkbox custom-control-inline">
                            <input id="chk1" type="checkbox" asp-for="messageType" value="sms" class="custom-control-input">
                            <label for="chk1" class="custom-control-label text-sm">SMS</label>
                        </div>
                        <h3><span id='message'></span></h3>

                        <div class="row mb-3 px-3">
                            <button type="submit" class="btn-signin text-center">Send Verification</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>

        <div class="bg-blue py-4">
            <div class="row px-3">
                <small class="ml-4 ml-sm-5 mb-2">
                    Copyright &copy; @DateTime.Now.Year<a style="color:yellowgreen" href="https://hicadsystemsltd.com/" _blank>Hicad Systems LTD</a> All rights
                    reserved.
                </small>

            </div>
        </div>
    </div>

</div>
<script>
    var check = function () {
        if (document.getElementById('email1').value ==
            document.getElementById('email2').value) {
            document.getElementById('message').style.color = 'green';
            document.getElementById('message').innerHTML = 'matching';
        } else {
            document.getElementById('message').style.color = 'red';
            document.getElementById('message').innerHTML = 'not matching';
        }
    }
</script>