@model NNPEFWEB.ViewModel.ForgetPasswordModel
@using Microsoft.AspNetCore.Http
@{ //ViewData["Title"] = "ResetPassword";
                Layout = "~/Views/Shared/_CustomLayout.cshtml"; }

<div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
    <div class="card card0 border-0">
        <div class="row d-flex">
            <div class="col-lg-6">
                <div class="card1 pb-5">

                    <div class="row px-3 justify-content-center mt-4 mb-5 border-line">
                        <img src="~/Image/navylogo2.png" class="logo">

                    </div>
                </div>
            </div>
            <section>
                <form id="account" method="post">
                    <h1>Reset Your Password</h1>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label>New assword</label>
                        <input asp-for="NewPassword" class="mb-4 form-styling" type="password" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="mb-4 form-styling" type="password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>



                    <div class="form-group">
                        <button type="submit" class="btn-signin text-center">Submit</button>
                    </div>

                </form>
            </section>
        </div>

        <div class="bg-blue py-4">
            <div class="row px-3">
                <small class="ml-4 ml-sm-5 mb-2">Copyright &copy; 2019. All rights reserved.</small>

            </div>
        </div>
    </div>

</div>
