@model NNPEFWEB.ViewModel.systeminfoVM
@using Microsoft.AspNetCore.Http

@{ ViewData["Title"] = "SiteActivities";
}

<section class="content">
    <div class="container-fluid">
        <!-- SELECT2 EXAMPLE -->
        <div class="card card-default">
            <div class="card-header">
                @if (TempData["SiteMessage"] != null)
                {<h3 style="color:red">@TempData["SiteMessage"]</h3>} @*<h3 class="card-title">Select2 (Default Theme)</h3>*@
                <div>
                    @if (Context.Session.GetInt32("Site") != null || Context.Session.GetInt32("Site") != 0)
                    {
        <h1>Site Has Been Close, Select Open To Reopen</h1>}
                </div>
                <form method="post">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-5">
                                <label class="control-label">Status</label>
                                <select class="form-control" name="SiteStatus" id="openemolumentform">
                                    <option></option>
                                    <option value="0">Open Emolument Form To Global</option>
                                    <option value="1">Open Emolument To Ship</option>
                                </select>


                            </div>
                            <div class="col-sm-5" hidden id="shipdisplay">
                                <label class="control-label">Ship</label>
                                <select  asp-for="shipname" name="shipname"
                                        class="form-control"
                                        asp-items="@(new SelectList(Model.shipList,"Value", "Text"))">
                                </select>
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-sm-4">
                                <label class="control-label">Start Date</label>
                                <input name="opendate" class="form-control" id="startdate" type="date" />
                            </div>
                            <div class="col-sm-4">
                                <label class="control-label">End Date</label>
                                <input name="closedate" class="form-control" id="enddate" type="date" />

                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-sm-4">
                                <input type="submit" class="btn btn-success" value="Proceed>>>" />
                            </div>
                        </div>
                    </div>
                </form>



            </div>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
<!-- Third party plugin JS-->
<script src="https://cdnjs.cloudflare.com/ajax/libs/animejs/3.2.1/anime.min.js"></script>
<!-- Contact form JS-->
<script src="~/assets/mail/jqBootstrapValidation.js"></script>
<script src="~/assets/mail/contact_me.js"></script>
<script src="~/js/datepicker1.js"></script>
<script src="~/js/datepicker2.js"></script>
<!-- Core theme JS-->
<script src="~/js/scripts.js"></script>
<script>
    $(document).ready(function () {
        $("#openemolumentform").change(
            function () {
                if ($(this).val() == 1) {
                    $("shipdisplay").show();
                } 

            });
    });
    $(function () {
       
        $("#startdate").datepicker();
        $("#enddate").datepicker();
    }

</script>