@model NNPEFWEB.ViewModel.PasswordCode
@using Microsoft.AspNetCore.Http
@{ ViewData["Title"] = "VerifyCode";
                Layout = null; }
<link href="~/css/logintemplate.css" rel="stylesheet" />
<link href="~/css/bootstrap.css" rel="stylesheet" />
<script src="~/js/loginjs.js"></script>
<link href="~/css/font-awsome.css" rel="stylesheet" />
<script src="~/js/jQuery.js"></script>
<div class="imagebackground">
    <div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
        <div class="card card0 border-0">
            <div class="row d-flex">
                <div class="col-lg-6">
                    <div class="card1 pb-5">
                        <div class="row px-3 justify-content-center mt-4 mb-5 border-line">
                            <img src="~/Image/navylogo2.png" class="logo">

                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card2 card border-0 px-4 py-5">

                        @if (@TempData["verifymessage"] != null)
                        {
            <div id="alert_div" class="alert alert-default-success alert-dismissible fade show" role="alert">
                <h2 style="color:#10912d">  @TempData["verifymessage"]</h2>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>}
                        <div class="row px-3 mb-4">
                            <div class="line"></div>
                            <div class="line"></div>
                        </div>
                        <form id="account" method="post">

                            <div class="row px-3">
                                <input asp-for="Code" class="mb-4 form-styling" placeholder="Enter Verification Code here" required />
                            </div>
                            <div class="row mb-3 px-3">
                                <button type="submit" class="btn-signin text-center">Verify</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="bg-blue py-4">
                <div class="row px-3">
                    <small class="ml-4 ml-sm-5 mb-2">Copyright &copy; 2019. All rights reserved.</small>

                </div>
            </div>
        </div>
    </div>
</div>

