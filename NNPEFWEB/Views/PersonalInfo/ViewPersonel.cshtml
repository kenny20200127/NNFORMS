    <div class="container">
        <h1> @Context.Session.GetString("SVC_No")</h1>
        @if (TempData["message"] != null)
        {
            <h5 style="color:red"> @TempData["message"]</h5>
        }
        <div class="col-md-12">
            <form asp-action="OfficerRecord" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <hr />
                <div class="row">
                    <h3 style="">
                        <label class="control-label">Personal Information</label>
                    </h3>
                </div>
                <div class="row" style="text-align:center">
                    <div class="col-md-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Passport" style="width: 100%;"></label>
                            @if (Model.Passport != null)
                            {
                                <img id="passport" style="width:200px;height:200px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Passport))"> }
                            else
                            {
                                <img id="passport" style="width:200px;height:200px; object-fit:cover" src="">}
                            <input type="file"
                                   accept=".png,.jpg,.jpeg,.gif,.tif"
                                   asp-for="Passport"
                                   class="form-control"
                                   style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                                   onchange="document.getElementById('passport').src = window.URL.createObjectURL(this.files[0])" />
                            <span asp-validation-for="Passport" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        @*<img src="~/Image/navylogo2.png" style="width:180px;height:200px;" />*@
                        @if (Model.logo != null)
                        {
                            <img id="logo" style="width: 130px; height: 190px; " src="data:image/*;base64,@(Convert.ToBase64String(Model.logo))"> }
                        else
                        {
                            <img id="logo" style="width:140px;height:220px; object-fit:cover" src="">}

                    </div>
                    <div class="col-md-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label style="width: 100%;">NOK Passport</label>
                            @if (Model.NokPassport != null)
                            {
                                <img id="nokpassport" style="width:200px;height:200px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.NokPassport))"> }
                            else
                            {
                                <img id="nokpassport" style="width:200px;height:200px; object-fit:cover" src="">}
                            <input type="file"
                                   accept=".png,.jpg,.jpeg,.gif,.tif"
                                   asp-for="NokPassport"
                                   class="form-control"
                                   style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                                   onchange="document.getElementById('nokpassport').src = window.URL.createObjectURL(this.files[0])" />
                            <span asp-validation-for="NokPassport" class="text-danger"></span>
                        </div>
                    </div>
                    @*<div class="col-md-3">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <label asp-for="AltNokPassport" style="width: 100%;"></label>
                                           @if (Model.AltNokPassport != null)
                                        {
                            <img id="altnokpassport" style="width:250px;height:250px; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.AltNokPassport))"> }
                        else
                        {
                        <img id="altnokpassport" style="width:250px;height:250px; object-fit:cover" src="">}*@
                    @*<input type="file"
                               accept=".png,.jpg,.jpeg,.gif,.tif"
                               asp-for="AltNokPassport"
                               class="form-control"
                               style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                               onchange="document.getElementById('altnokpassport').src = window.URL.createObjectURL(this.files[0])" />
                        <span asp-validation-for="AltNokPassport" class="text-danger"></span></div>
                                    </div>*@

                </div>
                <input asp-for="id" class="form-control" hidden />
                @*<officers-record></officers-record>*@
                <div class="row">

                    <div class="col-md-4">
                        <label asp-for="Surname" class="control-label"></label>
                        <input asp-for="Surname" class="form-control" readonly />
                        <span asp-validation-for="Surname" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Other Names</label>
                        <input asp-for="OtherName" class="form-control" readonly />
                        <span asp-validation-for="OtherName" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Service Number</label>
                        <input asp-for="serviceNumber" class="form-control" readonly />
                        <span asp-validation-for="serviceNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">

                    <div class="col-md-4">
                        <label asp-for="Rank" class="control-label"></label>
                        <select asp-for="Rank"
                                class="form-control"
                                asp-items="@(new SelectList(Model.rankList,"Value", "Text"))">
                        </select>
                        <span asp-validation-for="Rank" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Date of Birth</label>
                        <input asp-for="Birthdate" class="form-control" type="date" readonly />
                        <span asp-validation-for="Birthdate" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label class="control-label">Date of Joining</label>
                        <input asp-for="DateEmpl" class="form-control" type="date" readonly />
                        <span asp-validation-for="DateEmpl" class="text-danger"></span>
                    </div>

                </div>
                <div class="row">

                    <div class="col-md-4">
                        <label class="control-label">Residential Address</label>
                        <input asp-for="home_address" class="form-control" type="text" />
                        <span asp-validation-for="home_address" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Seniority on Current Rank</label>
                        <input asp-for="seniorityDate" class="form-control" type="date" required />
                        <span asp-validation-for="seniorityDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Type of Commissioning</label>
                        <select asp-for="entry_mode" id="entrymodeid"
                                class="form-control"
                                asp-items="@(new SelectList(Model.entry_modeList,"Value", "Text"))">
                        </select>
                        <span asp-validation-for="entry_mode" class="text-danger"></span>
                    </div>

                </div>

                <div class="row">
                    <div class="col-md-4" id="enrolmentdate">
                        <label class="control-label"> Date of Commissioning</label>
                        <input asp-for="advanceDate" class="form-control" type="date" />
                        <span asp-validation-for="advanceDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Run Out Date</label>
                        <input asp-for="runOutDate" class="form-control" type="date" readonly />
                        <span asp-validation-for="runOutDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">


                    <div class="col-md-4">
                        <label class="control-label">Branch</label>
                        <select asp-for="branch"
                                class="form-control"
                                asp-items="@(new SelectList(Model.branchList,"Value", "Text"))">
                        </select>
                        <span asp-validation-for="branch" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label class="control-label">Command</label>
                        <select asp-for="command" id="ddcommand"
                                class="form-control"
                                asp-items="@(new SelectList(Model.commandList,"Value", "Text"))">
                        </select>
                        <span asp-validation-for="command" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Ship</label>
                        <select asp-for="ship" id="ddship"
                                class="form-control"
                                asp-items="@(new SelectList(Model.shipList,"Value", "Text"))">
                        </select>
                        <span asp-validation-for="ship" class="text-danger"></span>
                    </div>
                </div>



                <div class="row">
                    <div class="col-md-4">
                        <label class="control-label">Specialisation</label>
                        <select asp-for="specialisation"
                                class="form-control"
                                asp-items="@(new SelectList(Model.specialisationList,"Value", "Text"))">
                        </select>
                        <span asp-validation-for="specialisation" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Present Appointment</label>
                        <input asp-for="entitlement" class="form-control" />
                        <span asp-validation-for="entitlement" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Nature of Appointment</label>
                        <select asp-for="confirmedBy" class="form-control" required>
                            <option>Select....</option>
                            <option value="Permanent">Permanent</option>
                            <option value="Contract">Contract</option>
                        </select>
                        <span asp-validation-for="confirmedBy" class="text-danger"></span>
                    </div>


                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label class="control-label">State of Origin</label>
                        @*<input asp-for="StateofOrigin" class="form-control" readonly />*@
                        <select asp-for="StateofOrigin" id="ddstate"
                                class="form-control"
                                asp-items="@(new SelectList(Model.StateofOriginList,"Value", "Text"))">
                        </select>
                        <span asp-validation-for="StateofOrigin" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">LGA</label>
                        @*<input asp-for="LocalGovt" class="form-control" readonly />*@
                        <select asp-for="LocalGovt" id="ddlocalGovt"
                                class="form-control"
                                asp-items="@(new SelectList(Model.LocalGovtList,"Value", "Text"))">
                        </select>
                        <span asp-validation-for="LocalGovt" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Religion</label>
                        @*<input asp-for="religion" class="form-control" />*@
                        <select asp-for="religion" class="form-control">
                            <option>Select....</option>
                            <option value="Christian">Christian</option>
                            <option value="Muslim">Muslim</option>

                        </select>
                        <span asp-validation-for="religion" class="text-danger"></span>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label class="control-label">GSM No (1)</label>
                        <input asp-for="gsm_number" class="form-control" />
                        <span asp-validation-for="gsm_number" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">GSM No (2)</label>
                        <input asp-for="gsm_number2" class="form-control" />
                        <span asp-validation-for="gsm_number2" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">E-mail</label>
                        <input asp-for="email" class="form-control" />
                        <span asp-validation-for="email" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Marital Status</label>
                        @*<input asp-for="MaritalStatus" class="form-control" />*@
                        <select asp-for="MaritalStatus" class="form-control">
                            <option>Select....</option>
                            <option value="Single">Single</option>
                            <option value="Married">Married</option>
                            <option value="Divorse">Divorce</option>
                            <option value="Widow">Widow</option>
                            <option value="Widower">Widower</option>

                        </select>
                        <span asp-validation-for="MaritalStatus" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <h3 style="">
                        <label class="control-label">Spouse</label>
                    </h3>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label class="control-label"><strong>Name</strong> <em>(State Rank/ Svc Number. if Personnel)</em></label>
                        <input asp-for="sp_name" class="form-control" />
                        <span asp-validation-for="sp_name" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">GSM No of Spouse (1)</label>
                        <input asp-for="sp_phone" class="form-control" />
                        <span asp-validation-for="sp_phone" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">GSM No of Spouse(2)</label>
                        <input asp-for="sp_phone2" class="form-control" />
                        <span asp-validation-for="sp_phone2" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">E-mail of Spouse</label>
                        <input asp-for="sp_email" class="form-control" />
                        <span asp-validation-for="sp_email" class="text-danger"></span>
                    </div>
                </div>
                <hr />

                <div class="row">
                    <h3 style="">
                        <label class="control-label">Children</label>
                    </h3>
                </div>
                <div class="row">
                    <div class="col-md-3">

                        <input asp-for="chid_name" class="form-control" placeholder="(1)" />
                        <span asp-validation-for="chid_name" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <input asp-for="chid_name2" class="form-control" placeholder="(2)" />
                        <span asp-validation-for="chid_name2" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <input asp-for="chid_name3" class="form-control" placeholder="(3)" />
                        <span asp-validation-for="chid_name3" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <input asp-for="chid_name4" class="form-control" placeholder="(4)" />
                        <span asp-validation-for="chid_name4" class="text-danger"></span>
                    </div>
                </div>

                <hr />
                <div class="row">
                    <h5 style="">
                        <label class="control-label">
                            Details of NOKs, (Note that NOK as used in this Form includes potential administrator of a deceased personnel's estate in relation to his personal emolument and other perquisites of office).
                        </label>
                    </h5>
                </div>
                <div class="row"><label><h4><u>Next of Kin</u> (Attach Passport Photographs)</h4></label></div>
                <div class="row">
                    <div class="col-md-4">
                        <label class="control-label">Name</label>
                        <input asp-for="nok_name" class="form-control" />
                        <span asp-validation-for="nok_name" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Relationship</label>
                        <select asp-for="nok_relation"
                                class="form-control"
                                asp-items="@(new SelectList(Model.nok_relationList,"Value", "Text"))">
                        </select>
                        <span asp-validation-for="nok_relation" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Address</label>
                        <input asp-for="nok_address" class="form-control" />
                        <span asp-validation-for="nok_address" class="text-danger"></span>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label class="control-label">GSM No (a)</label>
                        <input asp-for="nok_phone" class="form-control" />
                        <span asp-validation-for="nok_phone" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">GSM No (b)</label>
                        <input asp-for="nok_phone12" class="form-control" />
                        <span asp-validation-for="nok_phone2" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">E-mail</label>
                        <input asp-for="nok_email" class="form-control" />
                        <span asp-validation-for="nok_email" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">NIN of NOK</label>
                        <input asp-for="nok_nationalId" class="form-control" />
                        <span asp-validation-for="nok_nationalId" class="text-danger"></span>
                    </div>


                </div>


                <div class="row">
                    <h4 style="">
                        <label class="control-label"><u>Alternate Next Of Kin <em>(Attach Passport Photographs)</em></u></label>
                    </h4>
                </div>
                <div class="row">

                    <div class="col-md-4">
                        <label class="control-label">Name</label>
                        <input asp-for="nok_name2" class="form-control" />
                        <span asp-validation-for="nok_name2" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Relationship</label>
                        <select asp-for="nok_relation2"
                                class="form-control"
                                asp-items="@(new SelectList(Model.nok_relation2List,"Value", "Text"))">
                        </select>
                        <span asp-validation-for="nok_relation2" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Address</label>
                        <input asp-for="nok_address2" class="form-control" />
                        <span asp-validation-for="nok_address2" class="text-danger"></span>
                    </div>


                </div>
                <div class="row">

                    <div class="col-md-4">
                        <label class="control-label">GSM No (a)</label>
                        <input asp-for="nok_phone2" class="form-control" />
                        <span asp-validation-for="nok_phone2" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">GSM No (b)</label>
                        <input asp-for="nok_phone22" class="form-control" />
                        <span asp-validation-for="nok_phone2" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">E-mail</label>
                        <input asp-for="nok_email2" class="form-control" />
                        <span asp-validation-for="nok_email2" class="text-danger"></span>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label class="control-label">NIN of Alternate NOK</label>
                        <input asp-for="nok_nationalId2" class="form-control" />
                        <span asp-validation-for="nok_nationalId2" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Alternate Next of Kin(Photograph)</label>
                        <input type="file"
                               accept=".png,.jpg,.jpeg,.gif,.tif"
                               asp-for="AltNokPassport"
                               class="form-control"
                               style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                               onchange="document.getElementById('altnokpassport').src = window.URL.createObjectURL(this.files[0])" />
                        <span asp-validation-for="AltNokPassport" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <div class="row">

                    <div class="col-md-4">
                        <label class="control-label">Accommodation Status</label>
                        <select asp-for="AcommodationStatus" class="form-control" required>
                            <option>Select....</option>
                            <option value="Government Quarters">Government Quarters</option>
                            <option value="Acquried House">Acquired House</option>
                            <option value="Barracks">Barracks</option>
                            <option value="Rented Accommodation">Rented Accomodation</option>
                            <option value="Owned House">Owned House</option>
                        </select>
                        <span asp-validation-for="AcommodationStatus" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="control-label">Address of Accommodation</label>
                        <input asp-for="AddressofAcommodation" class="form-control" />
                        <span asp-validation-for="nok_address2" class="text-danger"></span>
                    </div>

                </div>
