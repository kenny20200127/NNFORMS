                    <h3 style="">
                        <label class="control-label">Do You Draw</label>
                    </h3>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label class="control-label"> Rent Subsidy</label>
                    </div>
                    <div class="col-md-2">
                        <input type="radio" id="rentcheck" value="Yes" asp-for="rent_subsidy" style="margin-left:20px;margin-right:10px;" />   <label class="control-label">Yes</label>
                    </div>
                    <div class="col-md-2">
                        <input type="radio" id="rentcheck" value="No" asp-for="rent_subsidy" style="margin-left:20px;margin-right:10px;" /><label class="control-label">No</label>
                    </div>
                    <span asp-validation-for="rent_subsidy" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label class="control-label"> Call/Shift Duty Allowance</label>
                    </div>
                    <div class="col-md-2">
                        <input type="radio" id="calldutycheck" value="Yes" asp-for="shift_duty_allow" style="margin-left:20px;margin-right:10px;" />   <label class="control-label">Yes</label>
                    </div>
                    <div class="col-md-2">
