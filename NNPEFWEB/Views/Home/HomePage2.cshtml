    <section class="page-section" id="contact">
        <div class="container">
            <div class="text-center">
                <h2 class="section-heading text-uppercase">Contact Us</h2>
                <h3 class="section-subheading text-muted">Contact Us Form Is Active</h3>
            </div>
           <form id="contactForm" name="sentMessage" novalidate="novalidate">

           @using (Html.BeginForm("Create", "ContactUs", FormMethod.Post))
            {
                <div class="row align-items-stretch mb-5">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.PersonName, new { @class = "form-control", @placeholder = "Your SVCNO *" })
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Email, new { @type = "email", @class = "form-control", @placeholder = "Your Email *" })
                            <p class="help-block text-danger"></p>
                        </div>
                        <div class="form-group mb-md-0">
                            @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", @placeholder = "Your Phone *" })
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group form-group-textarea mb-md-0">
                            @Html.TextAreaFor(model => model.Message, new { @class = "form-control", @placeholder = "Your Message *" })
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group form-group-textarea mb-md-0">
                            @Html.TextBoxFor(model => model.Ship, new { @class = "form-control", @placeholder = "Your Ship *" })
                            <p class="help-block text-danger"></p>
                        </div>
                    </div>
                </div>
                <button type="submit" value="save" name="save" class="btn btn-success">Save</button>
               <div class="text-center">
                    <div id="success"></div>
                    <button class="btn btn-primary btn-xl text-uppercase" type="submit">Send Message</button>
                </div>
                }
              </form>
        </div>
    </section>
