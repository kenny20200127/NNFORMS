@if (TempData["Message"] != null)
{
<div class="alert alert-success" role="alert">
    @TempData["Message"]
</div>
}


<div class="page-wrapper">
    <div class="container-fluid">
        <div class="section-heading">
            <h1 class="page-title">View Ticket</h1>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-3">
                    @*<button class='btn btn-success btn-block'>
                        <i class="fa fa-plus"></i> &nbsp; @Html.ActionLink("Create Contact", "Create", "ContactUs", null, new { style = "color: white;" })
                    </button>*@
                </div>
                <hr class="btn-block">
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <table @*id="data-table-user"*@ class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <td>Person Name</td>
                                <td>Ship</td>
                                <td>Email Address</td>
                                <td>Phone Number</td>
                                <td>Message</td>
                                <td>Response</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var contact in Model)
                            {
                                <tr>
                                    <td>@contact.PersonName</td>
                                    <td>@contact.Ship</td>
                                    <td>@contact.Email</td>
                                    <td>@contact.PhoneNumber</td>
                                    <td>@contact.Message</td>
                                    <td>@contact.Response</td>
                                    <td>
                                        @Html.ActionLink("Response", "Edit", "ContactUs", new { Id = contact.Id }, new { @class = "btn btn-primary" })
                                    </td>
                                    <td>
                                        @Html.ActionLink("Remove", "Delete", "ContactUs", new { Id = contact.Id }, new { @class = "btn btn-danger" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>