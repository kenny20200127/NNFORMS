@model NNPEFWEB.ViewModel.PasswordCode
@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Verify code";
    Layout = "~/Views/Shared/loginLayout.cshtml";

}

<div class="hidden xl:flex flex-col min-h-screen">
    <a href="" class="-intro-x flex items-center pt-5">

        @*<img alt="Midone Tailwind HTML Admin Template" class="w-6" src="dist/images/logo.svg">*@
        @*  <span class="text-white text-lg ml-3"> Mid<span class="font-medium">One</span> </span>*@
    </a>
    <div class="my-auto">
        <img style="margin-left:150px;width:150px" src="~/Image/navyImage-removebg.png" class="-intro-x w-1/2 -mt-16">
        @*<img alt="Midone Tailwind HTML Admin Template" class="-intro-x w-1/2 -mt-16" src="dist/images/illustration.svg">*@
        <div class="-intro-x text-white font-medium text-4xl leading-tight mt-10">
            Nigerian Navy Form System

        </div>
        @*<div class="-intro-x mt-5 text-lg text-white dark:text-gray-500">Manage all your e-commerce accounts in one place</div>*@
    </div>
</div>
<!-- END: Login Info -->
<!-- BEGIN: Login Form -->
<div class="h-screen xl:h-auto flex py-5 xl:py-0 my-10 xl:my-0">
    @if (@TempData["errorMessage"] != null)
    {
        <div id="alert_div" class="alert alert-danger alert-dismissible fade show" role="alert">
            <h2 style="color:#ff0000">  @TempData["errorMessage"]</h2>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @* <h3 style="color:brown">@Context.Session.GetString("Resetmessage")</h3>*@
    <div class="my-auto mx-auto xl:ml-20 bg-white xl:bg-transparent px-5 sm:px-8 py-8 xl:p-0 rounded-md shadow-md xl:shadow-none w-full sm:w-3/4 lg:w-2/4 xl:w-auto">
        <h2 class="intro-x font-bold text-2xl xl:text-3xl text-center xl:text-left">
            Verify Code 
        </h2>
        <div class="intro-x mt-2 text-gray-500 xl:hidden text-center">A few more clicks to sign in to your account. Manage all your e-commerce accounts in one place</div>
        <form id="account" method="post">
            @if (@TempData["verifymessage"] != null)
            {
                <div id="alert_div" class="alert alert-default-success alert-dismissible fade show" role="alert">
                    <h2 style="color:#10912d">  @TempData["verifymessage"]</h2>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            <div class="intro-x mt-8">
                <input type="text" asp-for="Code" class="intro-x login__input input input--lg border border-gray-300 block" placeholder="code" required>
                <br />
            </div>

    
            <div class="intro-x mt-5 xl:mt-8 text-center xl:text-left">
                <button class="button button--lg w-full xl:w-32 text-white bg-theme-1 xl:mr-3 align-top">Verify Code</button>
                @* <button class="button button--lg w-full xl:w-32 text-gray-700 border border-gray-300 dark:border-dark-5 dark:text-gray-300 mt-3 xl:mt-0 align-top">Sign up</button>*@
            </div>
        </form>

    </div>
</div>


