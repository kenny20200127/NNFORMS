
@{
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
    <div class="card card0 border-0">
        <div class="row d-flex">
            <div class="col-lg-6">
                <div class="card1 pb-5">

                    <div class="row px-3 justify-content-center mt-4 mb-5 border-line">
                        <img style="margin-left:50px; width:180px;height:280px" src="~/Image/navylogo2.png" class="logo">

                    </div>
                </div>
            </div>

            <section>
                <form id="account" method="post">
                    <h1>Enter Password Reset Code</h1>
                    @if (TempData["confirmError"] != null)
                    {
                        <p>@TempData["confirmError"].ToString()</p>
                    }
                    <hr />

                    <div class="form-group">
                        <label>Reset Code</label>
                        <input for="resetCode" name="resetCode" class="mb-4 form-styling" type="text" />
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn-signin text-center">Submit</button>
                    </div>

                </form>
            </section>
        </div>

        <div class="bg-blue py-4">
            <div class="row px-3">
                <small class="ml-4 ml-sm-5 mb-2">Copyright &copy; 2019. All rights reserved.</small>

            </div>
        </div>
    </div>

</div>
