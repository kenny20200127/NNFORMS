@model NNPEFWEB.ViewModel.ShipReport

@{ 
    Layout = null;
    int count = 0;
}
<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>NN-CPO</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />

    <!-- Font Awesome icons (free version)-->
    <script src="https://use.fontawesome.com/releases/v5.15.3/js/all.js" crossorigin="anonymous"></script>
    <!-- Google fonts-->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700" rel="stylesheet" type="text/css" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>

    <h3 style="text-align:center">RETRICTED</h3>
    <h2 style="text-align:center">NIGERIAN NAVY E-EMOLUMENT</h2>
    <h2 style="text-align:center">Ships List</h2>
    <h2 style="text-align:center">Produce On @DateTime.Now</h2>
    <div class="table">
        <table border="2" cellpadding="2" cellspacing="0" width="100%">

            <tr>
                <th>S/N</th>
                <th>Ship Name</th>
                <th>Command Name</th>
                <th>Status</th>
            </tr>
            @foreach (var r in Model.commandlist)
            {
                <tr style="text-align:left">
                    <td>@r.code</td>
                </tr>
                foreach (var r3 in Model.shiplist.Where(x => x.code == r.code).Select((x, i) => new { Data = x, Index = i+1 }))
                {
                <tr style="text-align:left">
                    <td>@r3.Index</td>
                    <td>@Html.DisplayFor(modelItem => r3.Data.shipName)</td>
                    <td>@Html.DisplayFor(modelItem => r3.Data.code)</td>

                </tr>
                }

            }

        </table>
    <br /><br />
                                 
        <h3 style="text-align:center">RETRICTED</h3>
    </div>
</body>
</html>