@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/logintemplate.css" rel="stylesheet" />
    <link href="~/css/font-awsome.css" rel="stylesheet" />
    <link href="~/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div>
        <div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">

            <div class="card card0 border-0">
                <div class="row d-flex">
                    <div class="col-lg-6">
                        <div class="card1 pb-5">
                            <div class="row px-3 justify-content-center mt-4 mb-5 border-line">
                                <img src="~/Image/navylogo2.png" class="logo">

                            </div>
                        </div>
                    </div>
                    <section>
                        <form method="post">
                            <h1>Send Verify Code</h1>

                            <hr />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Input.Email"></label>
                                <input asp-for="Input.Email" class="mb-6 form-styling" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <button type="submit"  class="btn-signin text-center">Submit</button>
                        </form>
                    </section>
                </div>
            </div>
        </div>
      </div>
</body>
</html>
<script src="~/js/jQuery.js"></script>
<script src="~/js/loginjs.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
